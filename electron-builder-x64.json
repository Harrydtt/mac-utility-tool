{
    "appId": "com.maccleaner.app",
    "productName": "Mac Ultility Tool",
    "mac": {
        "category": "public.app-category.utilities",
        "icon": "assets/tray-icon.png",
        "target": [
            {
                "target": "dmg",
                "arch": [
                    "x64"
                ]
            },
            {
                "target": "pkg",
                "arch": [
                    "x64"
                ]
            }
        ]
    },
    "pkg": {
        "scripts": "resources/pkg-scripts",
        "installLocation": "/Applications"
    },
    "files": [
        "dist/electron/**/*",
        "dist/src/**/*",
        "src/ui/**/*",
        "assets/**/*",
        "!**/node_modules/**/*",
        "!**/.git/**/*",
        "!**/dist/mac*/**",
        "!**/*.dmg",
        "!**/*.zip"
    ],
    "extraResources": [
        {
            "from": "assets",
            "to": "assets"
        }
    ],
    "asar": true
}