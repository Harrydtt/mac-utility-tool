{
  "name": "mac-cleaner",
  "productName": "Mac Cleaner",
  "version": "1.0.0",
  "description": "macOS System Cleaner - Clean junk files and free up disk space",
  "type": "module",
  "bin": {
    "mac-cleaner-cli": "./dist/index.mjs"
  },
  "main": "./dist/electron/main.js",
  "types": "./dist/index.d.mts",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "dev": "bun run src/index.ts",
    "build": "tsdown src/index.ts --format esm --dts --clean",
    "lint": "eslint src",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "prepublishOnly": "bun run build",
    "electron:dev": "tsc -p electron/tsconfig.json && electron .",
    "electron:build": "tsc && tsc -p electron/tsconfig.json && electron-builder",
    "start": "npm run electron:dev"
  },
  "build": {
    "appId": "com.maccleaner.app",
    "productName": "MacCleaner",
    "mac": {
      "category": "public.app-category.utilities",
      "icon": "assets/tray-icon.png",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ]
    },
    "files": [
      "dist/electron/**/*",
      "dist/src/**/*",
      "src/ui/**/*",
      "assets/**/*",
      "!**/node_modules/**/*",
      "!**/.git/**/*",
      "!**/dist/mac*/**",
      "!**/*.dmg",
      "!**/*.zip"
    ],
    "extraResources": [
      {
        "from": "assets",
        "to": "assets"
      }
    ],
    "asar": true
  },
  "keywords": [
    "mac",
    "cleaner",
    "macos",
    "cleanup",
    "cache",
    "cli",
    "disk-space",
    "system-maintenance",
    "junk-files"
  ],
  "author": "guhcostan",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/guhcostan/mac-cleaner-cli.git"
  },
  "bugs": {
    "url": "https://github.com/guhcostan/mac-cleaner-cli/issues"
  },
  "homepage": "https://github.com/guhcostan/mac-cleaner-cli#readme",
  "devDependencies": {
    "@eslint/js": "^9.28.0",
    "@types/bun": "^1.2.7",
    "@types/node": "^24.10.1",
    "@vitest/coverage-v8": "^4.0.15",
    "chalk": "^5.3.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.13.3",
    "eslint": "^9.28.0",
    "tsdown": "^0.18.2",
    "typescript": "^5.3.2",
    "typescript-eslint": "^8.48.1",
    "vitest": "^4.0.15"
  },
  "dependencies": {
    "@google/generative-ai": "^0.24.1",
    "@hono/node-server": "^1.19.7",
    "@inquirer/checkbox": "^5.0.2",
    "@inquirer/confirm": "^6.0.2",
    "animejs": "^4.2.2",
    "check-disk-space": "^3.4.0",
    "commander": "^14.0.2",
    "hono": "^4.11.0",
    "lottie-web": "^5.13.0",
    "open": "^11.0.0",
    "ora": "^9.0.0"
  },
  "os": [
    "darwin"
  ],
  "engines": {
    "node": ">=20.12.0"
  }
}